<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head') %>

	<body>
		<!-- Header -->
		<% if (locals.user) { %>
			<%- include('partials/headerLogueado') %>
		<% } else { %>
			<%- include('partials/header') %>
		<% } %>
		<!-- /Header -->

		<!-- Novedades -->
		<div class="container products-wrapper">
			<div class="row">
				<div class="col-12">
					<h2 class="products-title">RESULTADOS</h2>


					<%for (let i=0; i<mostrar.length; i++){ %>
						<div class="col-12 col-sm-6 col-lg-3">
						
							<section class="product-box">
								<a href="/product/<%=mostrar[i].id%>">
									<figure class="product-box_image">
										<img src="<%=mostrar[i].imagen%>" alt="<%=mostrar[i].nombreProducto%>">
									</figure>
									<article class="product-box_data">
										<h2><%=mostrar[i].nombreProducto%></h2>
										<p><%=mostrar[i].descripcionProducto%></p>
										<p>Comentarios: <%=mostrar[i].comentarios_producto.length%></p> 
									</article>
								</a>
							</section>
							
						</div>
					<%}%>
			</div>
		</div>

		<!-- footer -->
		<%- include('partials/footer') %>
		<!-- /footer -->

	</body>

</html>