<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user) { %>
		<%- include('partials/headerLogueado') %>
			<% } else { %>
				<%- include('partials/header') %>
					<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
		
			<!-- Show the "ultimos" products -->
		
			
			
			
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">RESULTADOS</h2>
		
					</div>
			  <% for (let i = 0; i < 4; i++) { %>
			  
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/product/<%= listado_cervezas[i].id %>">  
									<figure class="product-box_image">
										<img src="/images/products/<%= listado_cervezas[i].imagen %>" alt="<%= listado_cervezas[i].nombre %>">
									</figure>
									<article class="product-box_data">
										<h2><%= listado_cervezas[i].nombre %></h2>
										<p><%= listado_cervezas[i].descripcion %></p>
										<p>Comentarios: <%= listado_cervezas[i].usuario.comentario %></p>
									</article>
								</a>
							</section>
						</div>
					<% } %>
					<!-- Show the "ultimos" products -->
				</div>
			</div>


	<!-- footer -->
    <%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>