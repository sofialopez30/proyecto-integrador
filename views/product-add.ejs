  <% if(locals.user) { %>
	<%- include('partials/headerLogueado') %>
		<% } else { %>
			<%- include('partials/header') %>
				<% } %>

	<!-- /Header -->

	<!-- Novedades -->
  <br>
  <br>

  <div class="banner">
		<img src="/images/sale.png" alt="Banner de ofertas">
	</div>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<br> <br><h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> <i>

      <form method="POST" 
				<label>Imagen:</label>
