				<textarea placeholder="ingrese una breve descripcion del producto" name="descripcion" required class="form-input" ></textarea><br>
			  
				<label>Fecha de carga:</label>
				<input type="date" placeholder="ingrese la fecha en la que se cargo el producto" name="fechaDeCarga" required class="form-input" ><br>
			  
				<button type="submit">Agregar producto al catálogo</button>
			  </form>
			</h2>


	<!-- footer -->
  <%- include('partials/footer') %>
	<!-- /footer -->
