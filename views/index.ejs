<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
 <%- include('partials/head') %>
<body>
	
	<!-- Header -->
  <%- include('partials/header') %>  
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
      
			<% for (let i = 0; i < listado_cervezas.length; i++) { %>
      
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<!-- marca como que listado_cervezas no esta definido  -->
						<a href="/product/<%= listado_cervezas[i].id %>">  
							<figure class="product-box_image">
								<img src="/images/products/<%= listado_cervezas[i].imagen %>" alt="<%= listado_cervezas[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= listado_cervezas[i].nombre %></h2>
								<p><%= listado_cervezas[i].descripcion %></p>
								<p>Comentarios: <%= listado_cervezas[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- MÃ¡s comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mas comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
		</div>
	</div>
	<!-- /MÃ¡s comentados -->


	<!-- footer -->
  <%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>